<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="290dp"
              android:layout_height="280dp"
              android:background="@drawable/uni_comm_white_bkg"
              android:layout_gravity="center"
              android:gravity="center_horizontal">

    <RelativeLayout android:layout_width="270dp"
                    android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#313233"
                android:textSize="20sp"
                android:text="登录"/>

        <ImageButton
                android:id="@+id/uni_comm_ic_cancel_login"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/uni_comm_ibtn_close"/>

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/uni_comm_form_bkg">

        <ImageView
                android:id="@+id/uni_comm_ic_account_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/uni_comm_ic_account"/>

        <ImageButton
                android:id="@+id/uni_comm_ic_account_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/uni_comm_ic_delete"
                android:visibility="visible"/>

        <EditText
                android:id="@+id/uni_comm_edit_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入邮箱账号"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@drawable/uni_comm_form_bkg"
                android:textColorHint="#8A8F99"
                android:textColor="#313233"
                android:textSize="15sp"
                android:layout_toRightOf="@id/uni_comm_ic_account_left"
                android:layout_toLeftOf="@id/uni_comm_ic_account_right"
                android:text="unisdk_test"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/uni_comm_form_bkg">

        <ImageView
                android:id="@+id/uni_comm_ic_psw_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/uni_comm_ic_password"/>

        <CheckBox
                android:id="@+id/uni_comm_ic_psw_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:button="@drawable/uni_comm_ibtn_eyes"/>

        <EditText
                android:id="@+id/uni_comm_edit_psw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:maxLines="1"
                android:background="@drawable/uni_comm_form_bkg"
                android:textColorHint="#8A8F99"
                android:textColor="#313233"
                android:textSize="15sp"
                android:layout_toRightOf="@id/uni_comm_ic_psw_left"
                android:layout_toLeftOf="@id/uni_comm_ic_psw_right"
                android:text="unisdk1234"/>

    </RelativeLayout>

    <Button
            android:id="@+id/uni_comm_btn_login"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/uni_comm_btn"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="立即登录"/>


</LinearLayout>