<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="290dp"
              android:layout_height="280dp"
              android:background="@drawable/uni_comm_white_bkg"
              android:layout_gravity="center"
              android:gravity="center_horizontal"
              android:padding="10dp">

    <RelativeLayout android:layout_width="270dp"
                    android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#313233"
                android:textSize="20sp"
                android:text="用户协议"/>

        <ImageButton
                android:id="@+id/uni_comm_ibtn_cancel_protocol"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/uni_comm_ibtn_close"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

            <Button
                    android:id="@+id/uni_comm_btn_protocol_confirm"
                    android:layout_width="250dp"
                    android:layout_height="44dp"
                    android:background="@drawable/uni_comm_btn"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="确定"/>

            <Button
                    android:id="@+id/uni_comm_btn_protocol_agree"
                    android:layout_width="250dp"
                    android:layout_height="44dp"
                    android:background="@drawable/uni_comm_btn"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="同意"/>

            <Button
                    android:id="@+id/uni_comm_btn_protocol_reject"
                    android:layout_width="250dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/uni_comm_btn"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="拒绝"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>