<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="290dp"
              android:layout_height="340dp"
              android:background="@drawable/uni_comm_white_bkg"
              android:layout_gravity="center"
              android:gravity="center_horizontal"
              android:padding="10dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="368"
                  android:orientation="vertical"
                  android:gravity="center_horizontal">

        <RelativeLayout android:layout_width="270dp"
                        android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#313233"
                    android:textSize="20sp"
                    android:text="支付"/>

            <ImageButton
                    android:id="@+id/uni_comm_ic_cancel_pay"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/uni_comm_ibtn_close"/>

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="#8E9094"
                android:text="商品价格"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#313233"
                    android:text="¥"/>

            <TextView
                    android:id="@+id/uni_comm_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#313233"
                    android:text="28.68"/>

        </LinearLayout>


    </LinearLayout>

    <View
            android:layout_height="1dp"
            android:background="#E8E9EB"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="fill_parent"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="536"
                  android:layout_marginLeft="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginEnd="10dp"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#8E9094"
                    android:text="商品名称："/>

            <TextView
                    android:id="@+id/uni_comm_tv_product_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#313233"
                    android:text="暑期优惠礼包"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#8E9094"
                    android:text="    商品ID："/>

            <TextView
                    android:id="@+id/uni_comm_tv_pid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#313233"
                    android:text="1654887456004558"/>

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp">

            <Button
                    android:id="@+id/uni_comm_btn_order_suc"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:background="@drawable/uni_comm_btn"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    android:text="支付成功"/>

            <Button
                    android:id="@+id/uni_comm_btn_order_fail"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:background="@drawable/uni_comm_btn"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/white"
                    android:text="支付失败"/>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp">

            <Button
                    android:id="@+id/uni_comm_btn_order_unknown"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:background="@drawable/uni_comm_btn"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/white"
                    android:text="支付未知"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>